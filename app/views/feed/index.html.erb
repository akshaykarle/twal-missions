<div id="container">
  <div id="left-column">
    <%= image_tag("glyphs.png", alt: "Glyphs Melhor Tecnologia", class: "glyphs") %>
    <%= image_tag("melhor_tecnologia.png", alt: "Melhor Tecnologia", class: "best-technology") %>

    <span class="hashtag">#<%=ENV["HASHTAG"]%></span>

    <button id="fullscreen-btn">Fullscreen</button>
  </div>

  <div id="right-column">
    <div class="flexslider">
      <ul class="slides">
        <% @posts.each_with_index do |post, i| %>
          <% if post.media_url %>
            <%= render 'post', post: post, i: i %>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>

  <h1 id="loading"></h1>

